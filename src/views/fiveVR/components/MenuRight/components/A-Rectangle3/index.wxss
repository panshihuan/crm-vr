.vr__rectangle3 {
  margin-bottom: 20px;
  border: 1px solid #999;
  border-radius: 7px;
  padding: 15px 10px 15px 12px;
}

.vr__rectangle3__form {
  margin-top: 10px;
}

.vr__rectangle3__section {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.vr__rectangle3__label {
  flex: 0 0 51px;
}

.vr__rectangle3__label2 {
  position: relative;
}

.vr__rectangle3__label2::before {
  content: '';
  display: block;
  width: 6px;
  height: 6px;
  border-radius: 50% 50%;
  position: absolute;
  left: -8px;
  top: 50%;
  transform: translateY(-50%);
}

.vr__rectangle3__slider {
  flex: 1;
}

.vr__rectangle3--x::before {
  background: #fc1419;
}

.vr__rectangle3--y::before {
  background: #31ff30;
}

.vr__rectangle3--z::before {
  background: #0e43fb;
}
