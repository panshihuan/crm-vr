@charset "UTF-8";
.home {
  overflow-x: hidden;
}

.home__title {
  font-size: 22px;
  font-weight: 700;
  padding: 20px 15px;
}

.home__img {
  width: 100%;
  padding: 0 5px;
  border-radius: 12px 12px;
  overflow-x: hidden;
}

.home__img img {
  width: 100%;
}

.home__welcome {
  padding: 15px;
  font-size: 16px;
  font-weight: 700;
}

.home__welcome__name {
  color: #acac0f;
}

.home__line {
  width: 100%;
  height: 10px;
  background: #efefef;
}

.home__menu {
  padding: 15px;
}

.home__menu:last-child {
  margin-bottom: 20px;
}

.home__menu__header {
  padding-bottom: 18px;
  font-size: 18px;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.home__menu__main {
  display: flex;
  width: 100%;
  overflow: hidden;
  flex-flow: wrap;
}

.home__menu__section {
  flex: 0 0 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 21px;
}

.home__menu__txt {
  text-align: center;
  padding-top: 6px;
  font-size: 13px;
}

.home__menu__badge {
  position: absolute;
  right: -4px;
  top: -4px;
  background: red;
  color: #fff;
  padding: 0 3px;
  border-radius: 50% 50%;
  border: 1px solid #fff;
  min-width: 20px;
  font-weight: 500;
  font-size: 12px;
  line-height: 1.6;
  text-align: center;
  -webkit-animation-name: scaleDraw;
  /*关键帧名称*/
  -webkit-animation-timing-function: ease-in-out;
  /*动画的速度曲线*/
  -webkit-animation-iteration-count: infinite;
  /*动画播放的次数*/
  -webkit-animation-duration: 2.5s;
  /*动画所花费的时间*/
}

.home__menu__more {
  color: #333;
  font-size: 12px;
  font-weight: 400;
  cursor: pointer;
}

.home__icon {
  position: relative;
  width: 55px;
  height: 55px;
  background: #de9845;
  padding: 12px;
  border-radius: 50% 50%;
  text-align: center;
  display: flex;
  justify-self: center;
  align-items: center;
}

@keyframes scaleDraw {
  0% {
    transform: scale(1);
  }
  25% {
    transform: scale(1.3);
    /*放大1.1倍*/
  }
  50% {
    transform: scale(1);
  }
  75% {
    transform: scale(1.3);
  }
}
